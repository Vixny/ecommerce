<p id="notice"><%= notice %></p>

<h1>Listing Medications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Generic name</th>
      <th>Int name</th>
      <th>Prescription required</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Manufacturer</th>
      <th>Origin</th>
      <th>Is pack size splittable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.name %></td>
        <td><%= medication.generic_name %></td>
        <td><%= medication.int_name %></td>
        <td><%= medication.prescription_required %></td>
        <td><%= medication.quantity %></td>
        <td><%= medication.price %></td>
        <td><%= medication.manufacturer %></td>
        <td><%= medication.origin %></td>
        <td><%= medication.is_pack_size_splittable %></td>
        <td><%= link_to 'Show', medication %></td>
        <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
        <td><%= link_to 'Destroy', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

