<div class="row">
      <%= form_for(@customer) do |f| %>

  <div class="col-md-6">
    <div class="form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :middle_name %><br>
    <%= f.text_field :middle_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :dob %><br>
    <%= f.date_select :dob, :start_year => Time.now.year - 70, :end_year => Time.now.year, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.number_field :phone, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :dr_name %><br>
    <%= f.text_field :dr_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :dr_phone %><br>
    <%= f.number_field :dr_phone, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :dr_fax %><br>
    <%= f.number_field :dr_fax, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :shipping_address %><br>
    <%= f.text_field :shipping_address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :billing_address %><br>
    <%= f.text_field :billing_address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :billing_info %><br>
    <%= f.text_field :billing_info, class: "form-control" %>
  </div>
  </div>
  <div class="col-md-6">
  <div class="form-group">
    <%= f.label :smoker %><br>
    <%= f.text_field :smoker, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :drinker %><br>
    <%= f.text_field :drinker, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :eye_disorders %><br>
    <%= f.text_area :eye_disorders, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :emotional_mood_disorders %><br>
    <%= f.text_area :emotional_mood_disorders, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :heart_disease %><br>
    <%= f.text_field :heart_disease, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :high_lipids %><br>
    <%= f.text_field :high_lipids, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :neurological_disorders %><br>
    <%= f.text_area :neurological_disorders, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :kidney_disorders %><br>
    <%= f.text_area :kidney_disorders, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :stomach_disorders %><br>
    <%= f.text_area :stomach_disorders, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :diabetes %><br>
    <%= f.text_field :diabetes, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :other_disorders %><br>
    <%= f.text_area :other_disorders, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :drug_alergies %><br>
    <%= f.text_area :drug_alergies, class: "form-control" %>
  </div>

</div>
  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to 'Cancel', customers_path, class: "btn btn-danger" %>
  </div>

</div>
<% end %>
